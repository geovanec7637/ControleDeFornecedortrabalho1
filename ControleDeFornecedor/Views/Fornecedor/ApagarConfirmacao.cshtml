@model FornecedorModel  
@{
    ViewData["Title"] = "Confirmação de apagar Fornecedores";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirmação de Apagar Fornecedores</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <style>
        body {
            padding-top: 80px;
            background: linear-gradient(to bottom, #708090, #FFF0F5);
            color: #363636;
            font-family: Arial, sans-serif;
        }

        .custom-container {
            background: rgba(255, 255, 255, 0.3);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.5);
            border-radius: 20px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
            padding: 20px;
            max-width: 600px;
            margin: 80px auto; /* Aumentei o margin-top para 40px */
        }

        .custom-container h3 {
            text-align: center;
            color: #363636;
        }

        .btn-block {
            margin: 10px 0;
        }

        .btn-danger {
            background-color: #363636;
            border: none;
            color: white;
            font-size: 16px;
            padding: 10px 20px;
            border-radius: 10px;
            width: 100%;
            cursor: pointer;
            transition: background-color 0.3s ease; 
        }

        .btn-danger:hover {
            background-color: #f44336;
        }

        .btn-primary {
            background-color: #363636; 
            border: none;
            color: white; 
            font-size: 16px;
            padding: 10px 20px;
            border-radius: 10px;
            width: 100%;
            cursor: pointer;
            transition: background-color 0.3s ease; 
        }

        .btn-primary:hover {
            background-color: #20B2AA;
        }
    </style>
</head>
<body>

    <div class="container">
        <div class="custom-container">
            <h3>Realmente deseja apagar o Fornecedor (@Model.PessoaDeContato)?</h3>

            <center>
                <a class="btn btn-primary btn-block" href="@Url.Action("Index", "Fornecedor")" role="button">Cancelar exclusão</a>
                <a class="btn btn-danger btn-block" asp-action="Apagar" asp-controller="Fornecedor" asp-route-id="@Model.Id" role="button">Confirmar exclusão</a>
            </center>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
